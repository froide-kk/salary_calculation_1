<p id="notice"><%= notice %></p>

<h1 class="title">社員情報</h1>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>社員番号</th>
      <th>氏名</th>
      <th>生年月日</th>
      <th>年齢</th>
      <th>判定</th>
      <th>支社</th>
      <th>部署</th>
      <th>職種</th>
      <th>住居</th>
      <th>扶養家族数(配偶者)</th>
      <th>扶養家族数(子：18迄</th>
      <th>職位</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.emp_id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.birth %></td>
        <td><%= employee.age %></td>
        <td><%= employee.judgment %></td>
        <td><%= employee.branch %></td>
        <td><%= employee.department %></td>
        <td><%= employee.task %></td>
        <td><%= employee.residence %></td>
        <td><%= employee.fam_spouse %></td>
        <td><%= employee.fam_except_spouse %></td>
        <td><%= employee.position %></td>
        <td><%= link_to '明細書', employee %></td>
        <td><%= link_to '編集', edit_employee_path(employee) %></td>
        <td><%= link_to '削除', employee, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button class="right" onclick="location.href = '/employees/new'">+ 社員を追加</button>

<button class="center" onclick="javascript:history.back()">バック</button>
