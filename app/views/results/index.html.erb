                <input type="checkbox" name="employee_option_list[]" value="fam_spouse"/> Family Spouse
                <br />
                <input type="checkbox" name="employee_option_list[]" value="fam_except_spouse"/> Family Except Spouse
                <br />
                <input type="checkbox" name="employee_option_list[]" value="branch" checked="checked"/> Branch
                <br />
                <input type="checkbox" name="employee_option_list[]" value="department" checked="checked"/> Department
                <br />
                <input type="checkbox" name="employee_option_list[]" value="task" checked="checked"/> Task
                <br />
                <input type="checkbox" name="employee_option_list[]" value="position" checked="checked"/> Position
