<p id="notice"><%= notice %></p>

<% @match = true %>

<% @branch = params[:branch] %>
<% @department = params[:department] %>
<% @emp_id = params[:emp_id] %>

<!-- Menu Bar -->

<nav id="topMenu">
    <ul>
        <li class="topMenuLi">
            <a class="menuLink" href="/employees">Edit Employee</a>            
        </li>

        <li>|</li>

        <li class="topMenuLi">
            <a class="menuLink" href="">Edit Column</a>
            <ul class="submenu">
                <li>
                    <a class="submenuLink">Standard</a>
                </li>
                <li>
                    <a class="submenuLink">Point</a>
                </li>
                <li>
                    <a class="submenuLink">Salary</a>
                </li>             
            </ul>    
        </li>
            
    </ul>
</nav>

<div class="title">Home</div>

<div class="search">
    <form method="get" action="/results">
        <h3>Branch : </h3>
        <select name='branch'>
            <option value='all' selected>All</option>
            <option value='kitakyushu'>Kitakyushu</option>
            <option value='tokyo'>Tokyo</option>
            <option value='fukuoka'>Fukuoka</option>          
        </select>
        
        <h3>Department : </h3>
        <select name='department'>
            <option value='all' selected>All</option>
            <option value='s'>Development</option>
            <option value='tokyo'>Management</option>
            <option value='fukuoka'>Human Resource</option>          
        </select>

        <h3>ID : </h3>
        <input type="text" name="emp_id" placeholder="ALL">		
            
        <h3><input type="submit" value="Search"></h3>
        <br>
        <br>
    </form> 
</div>




<% if @match == true %>

<table class = "type10" align="center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Birth</th>
            <th>Residence</th>        
            <th>Department</th>    
            <th colspan="3">Action</th>
        </tr>
    </thead>

    <% @employees.each do |employee| %>
        <tbody>
            <tr>
                <td><%= employee.emp_id %></td>
                <td><%= employee.name %></td>
                <td><%= employee.age %></td>
                <td><%= employee.birth %></td>
                <td><%= employee.residence %></td>                
                <td><%= employee.department %></td>                
                <td><%= link_to 'Show', employee %></td>
                <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
                <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>     
        </tbody>    
    <% end %>              
</table>
<% else %>
    <br>
    <br>
    <h2 style="text-align: center">No matching data</h2>
<% end %>
