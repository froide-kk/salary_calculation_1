                <br />
                <input type="checkbox" name="point_option_list[]" value="isms"/> ISMS
                <br />
                <input type="checkbox" name="point_option_list[]" value="health"/> Healty
                <br />
                <input type="checkbox" name="point_option_list[]" value="small_group"/> Small Group
                <br />
                <input type="checkbox" name="point_option_list[]" value="eval_mgm"/> Evaluation Management
                <br />
                <input type="checkbox" name="point_option_list[]" value="eval_tec"/> Evaluation Technology
                <br />
                <input type="checkbox" name="point_option_list[]" value="adjustment"/> Adjustment
                <br />
                <input type="checkbox" name="point_option_list[]" value="is_short_work"/> Short Work
                <br />
                <input type="checkbox" name="point_option_list[]" value="overtime"/> Overtime
                <br />
                </ul>

                <ul style="text-align:left">
                <b>Salary</b>
                <br />
                <input type="checkbox" name="salary_option_list[]" value="standard_sal" checked="checked"/> Standard Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="ability_sal" checked="checked"/> Ability Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="position_sal" checked="checked"/> Position Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="task_sal" checked="checked"/> Task Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="praise_sal" checked="checked"/> Praise Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="residence_spt_sal" /> Residence Support Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="basic_sal" checked="checked"/> Basic Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="hour_sal"/> Hour Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="over_hour_sal"/> Over Hour Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="over_sal" checked="checked"/> Over Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="fam_sal"/> Family Salary
                <br />
                <input type="checkbox" name="salary_option_list[]" value="total_sal" checked="checked"/> Total Salary
                <br />
