

<p id="notice"><%= notice %></p>

<h1 class="title">Employee Salary</h1>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Emp</th>
      <th>Standard sal</th>
      <th>Ability sal</th>
      <th>Position sal</th>
      <th>Task sal</th>
      <th>Praise sal</th>
      <th>Residence spt sal</th>
      <th>Basic sal</th>
      <th>Hour sal</th>
      <th>Over hour sal</th>
      <th>Over sal</th>
      <th>Fam sal</th>
      <th>Total sal</th>
      <th>Last total sal</th>
      <th>Diff total sal</th>
      <th>Rate</th>
      <th>Last hour sal</th>
      <th>Diff hour sal</th>
      <th>Last rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salaries.each do |salary| %>
      <tr>
        <td><%= salary.emp_id %></td>
        <td><%= number_with_precision(salary.standard_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.ability_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.position_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.task_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.praise_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.residence_spt_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.basic_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.hour_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.over_hour_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.over_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.fam_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.total_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.last_total_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.diff_total_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= salary.rate %> %</td>
        <td><%= number_with_precision(salary.last_hour_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= number_with_precision(salary.diff_hour_sal, :precision => 0, :delimiter => ',') %> &yen;</td>
        <td><%= salary.last_rate %> %</td>
        <td><%= link_to 'Show', salary %></td>
        <td><%= link_to 'Edit', edit_salary_path(salary) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= number_with_precision(@number, :precision => 2, :delimiter => ',') %>

