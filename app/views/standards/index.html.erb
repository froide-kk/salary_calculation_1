<h1 class="title">Standards</h1>



<br>

<div>
    <table>
      <caption>Position Standard Value</caption>
      <thead>
        <tr>
          <th>Position name</th>
          <th>Ability val</th>
          <th>Max overtime</th>
          <th>Pos val</th>
          <th>Pos inc val</th>
          <th>Pos std age</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @position_std_vals.each do |position_std_val| %>
          <tr>
            <td><%= position_std_val.position_name %></td>
            <td><%= number_with_precision(position_std_val.ability_val, :precision => 0, :delimiter => ',') %> &yen;</td>
            <td><%= position_std_val.max_overtime %></td>
            <td><%= number_with_precision(position_std_val.pos_val, :precision => 0, :delimiter => ',') %> &yen;</td>
            <td><%= number_with_precision(position_std_val.pos_inc_val, :precision => 0, :delimiter => ',') %> &yen;</td>
            <td><%= position_std_val.pos_std_age %></td>
            <td><%= link_to 'Edit', edit_position_std_val_path(position_std_val) %></td>
            <td><%= link_to 'Destroy', position_std_val, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <button class="right" onclick="location.href = '/position_std_val/new'">+ Add Value</button>
    <br>
</div>

