<p id="notice"><%= notice %></p>

<h1 class="title">職員の情報</h1>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>番号</th>         <!--emp-->
      <th>氏名</th>         <!--Name-->
      <th>生年月日</th>     <!--Birth-->
      <th>年齢</th>         <!--Age-->
      <th>判定</th>         <!--Judgment-->
      <th>支社</th>         <!--Branch-->
      <th>部署</th>         <!--Department-->
      <th>職種</th>         <!--Task-->
      <th>住居</th>         <!--Residence-->
      <th>扶養家族数(配偶者)</th>         <!--Fam spouse-->
      <th>扶養家族数(子：18迄)</th>         <!--Fam except spouse-->
      <th>職位</th>         <!--Position-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.emp_id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.birth %></td>
        <td><%= employee.age %></td>
        <td><%= employee.judgment %></td>
        <td><%= employee.branch %></td>
        <td><%= employee.department %></td>
        <td><%= employee.task %></td>
        <td><%= employee.residence %></td>
        <td><%= employee.fam_spouse %></td>
        <td><%= employee.fam_except_spouse %></td>
        <td><%= employee.position %></td>
        <td><%= link_to '詳しく', employee %></td>
        <td><%= link_to '修正', edit_employee_path(employee) %></td>
        <td><%= link_to '削除', employee, method: :delete, data: { confirm: '削除しますか？' } %></td>       <!--삭제 하시겠습니까?-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button class="right" onclick="location.href = '/employees/new'">+ 職員追加</button>

<button class="center" onclick="javascript:history.back()">移転</button>
