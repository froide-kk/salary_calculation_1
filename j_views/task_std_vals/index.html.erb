<p id="notice"><%= notice %></p>

<h1>職種による基準</h1>          <!--Task Std Vals--> 

<table>
  <thead>
    <tr>
      <th>職種</th>          <!--Task name--> 
      <th>職務手当</th>          <!--Task val--> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_std_vals.each do |task_std_val| %>
      <tr>
        <td><%= task_std_val.task_name %></td>
        <td><%= task_std_val.task_val %></td>
        <td><%= link_to '詳しく', task_std_val %></td>
        <td><%= link_to '修正', edit_task_std_val_path(task_std_val) %></td>
        <td><%= link_to '削除', task_std_val, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

